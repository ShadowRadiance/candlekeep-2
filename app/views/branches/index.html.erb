<h1>Branches</h1>

<div class="table-responsive row col">
  <table class="table table-hover">
    <thead class="thead-light">
    <tr class="row">
      <th class="col" scope="col">Name</th>
      <th class="col-4" scope="col">Address</th>
      <th class="col" scope="col">Phone Number</th>
      <th class="col-2" scope="col" colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @branches.each do |branch| %>
      <tr class="row">
        <td class="col text-nowrap"><%= branch.name %></td>
        <td class="col-4 text-truncate"><%= branch.address %></td>
        <td class="col text-nowrap"><%= branch.phone_number %></td>
        <td class="col-2 text-nowrap">
          <%= link_to 'Show', branch %>
          |
          <%= link_to 'Edit', edit_branch_path(branch) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Branch', new_branch_path %>
